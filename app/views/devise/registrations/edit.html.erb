<div class="flex items-center justify-center w-full min-h-screen">
  <div class="w-full max-w-xl p-12 space-y-6 rounded-lg shadow-xl bg-white">
    <h2 class="text-2xl font-bold text-center text-gray-900">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="space-y-4">
        <div class="field">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-3 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-sm text-gray-500">Currently waiting confirmation for: <span class="font-medium text-gray-700"><%= resource.unconfirmed_email %></span></div>
        <% end %>

        <div class="field">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %> 
          <i class="text-xs text-gray-500">(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "block w-full px-3 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          <% if @minimum_password_length %>
            <div class="text-xs text-gray-500 mt-1">
              <em><%= @minimum_password_length %> characters minimum</em>
            </div>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block w-full px-3 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>

        <div class="field">
          <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %> 
          <i class="text-xs text-gray-500">(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "block w-full px-3 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <div class="actions pt-4">
        <%= f.submit "Update", class: "flex justify-center w-full px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
      </div>
    <% end %>

    <div class="space-y-4 pt-8">
      <h3 class="text-xl font-bold text-gray-900">Cancel my account</h3>
      <div class="text-sm text-gray-700">
        Unhappy? 
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 cursor-pointer" %>
      </div>
    </div>
    
    <div class="pt-4">
      <%= link_to "Back", :back, class: "text-sm text-indigo-600 hover:text-indigo-500" %>
    </div>
  </div>
</div>