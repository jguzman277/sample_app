<div class="flex items-center justify-center w-full min-h-screen">
  <div class="w-full max-w-xl p-12 space-y-6 rounded-lg shadow-xl bg-white">
    <h2 class="text-2xl font-bold text-center text-gray-900">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <div class="space-y-4">
        <div class="field">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-3 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <div class="actions pt-4">
        <%= f.submit "Send me reset password instructions", class: "flex justify-center w-full px-4 py-2 text-sm font-medium text-white bg-indigo-600 border border-transparent rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>